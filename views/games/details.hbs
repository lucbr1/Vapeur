<section class="game-details">
	<div class="game-details__hero">
		<h1>{{game.title}}</h1>
		<p>{{game.description}}</p>
		<span class="game-details__pill {{#if game.highlighted}}is-highlighted{{/if}}">
			{{#if game.highlighted}}Mis en avant{{else}}Non mis en avant{{/if}}
		</span>
	</div>

	<div class="game-details__grid">
		<div class="game-details__item">
			<span class="label">Date de sortie</span>
			<p>{{formattedReleaseDate}}</p>
		</div>
		<div class="game-details__item">
			<span class="label">Genre</span>
			{{#if game.genre}}
				<a class="game-details__link" href="/genres/{{game.genre.id}}">{{game.genre.name}}</a>
			{{else}}
				<p class="game-details__placeholder">Aucun genre renseigné</p>
			{{/if}}
		</div>
		<div class="game-details__item">
			<span class="label">Éditeur</span>
			{{#if game.editor}}
				<a class="game-details__link" href="/editors/{{game.editor.id}}">{{game.editor.name}}</a>
			{{else}}
				<p class="game-details__placeholder">Aucun éditeur renseigné</p>
			{{/if}}
		</div>
	</div>

	<div class="game-details__actions">
		<form action="/games/{{game.id}}/edit" method="GET">
			<button type="submit" class="cta">Modifier le jeu</button>
		</form>
		<button type="button" class="ghost" onclick="document.getElementById('deleteDialog').showModal()">
			Supprimer le jeu
		</button>
	</div>
</section>

<dialog id="deleteDialog" class="game-details__dialog">
	<h2>Supprimer le jeu</h2>
	<p>Êtes-vous sûr de vouloir supprimer "{{game.title}}" ?</p>
	<div class="game-details__dialog-actions">
		<form method="dialog">
			<button type="submit" class="ghost">Annuler</button>
		</form>
		<form action="/games/{{game.id}}/delete" method="POST">
			<button type="submit" class="danger">Confirmer la suppression</button>
		</form>
	</div>
</dialog>