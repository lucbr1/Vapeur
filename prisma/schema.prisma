generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        Int      @id @default(autoincrement())
  title     String @unique
  description String?
  releaseDate DateTime?
  highlighted Boolean  @default(false)
  genre Genre? @relation(fields: [genreId], references: [id], onDelete: SetNull)
  genreId Int?
  editor Editor? @relation(fields: [editorId], references: [id], onDelete: SetNull)
  editorId Int?
}

model Genre{
  id        Int      @id @default(autoincrement())
  name      String   @unique
  games     Game[]   
}

model Editor{
  id        Int      @id @default(autoincrement())
  name      String  @unique
  games     Game[]
}
